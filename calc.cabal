cabal-version: 2.4

-- MetaInfo
name: lem-calc
version: 0.1.0
synopsis: A small calculator to test haskell
description: This packages provides a small calculator that read an operation from a file and print the result
license: BSD-3-Clause
license-file: LICENSE.txt
author: Lucas Elvira Mart√≠n
extra-doc-files:
    README.org
-- -MetaInfo

-- CommonSettings
common common-settings
  default-language: Haskell2010
  ghc-options:
    -Wall
-- -CommonSettings

-- Library
library
  import: common-settings
  hs-source-dirs: src
  build-depends:
      base
    , directory
  exposed-modules:
    Calc
        Calc.Operations
            Calc.Operations.Lexical
        Calc.Equation
              Calc.Equation.Internal
         Calc.CustomErrors
         Calc.Lexer
              Calc.Lexer.AST
              Calc.Lexer.Internal
  -- other-modules:
-- -Library

-- Executable
executable lem-calc-gen
  import: common-settings
  hs-source-dirs: app
  main-is: Main.hs
  build-depends:
      base
    , lem-calc
  ghc-options:
    -O
-- -Executable

-- TestBlock
test-suite lem-calc-gen-test
  import: common-settings
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Spec.hs
  other-modules:    
    CalcEquationSpec
    OperationsSpec
    CalcSpec
    CalcLexerInternalSpec
    CalcLexerASTSpec
  build-depends:
      base
    , hspec
    , hspec-discover
    , raw-strings-qq
    , lem-calc
  ghc-options:
    -O -threaded -rtsopts -with-rtsopts=-N
  build-tool-depends:
    hspec-discover:hspec-discover
-- -TestBlock

